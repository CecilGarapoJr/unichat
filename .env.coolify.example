# UniChat Production Environment Variables for Coolify Deployment

# Application Settings
RAILS_ENV=production
NODE_ENV=production
INSTALLATION_ENV=docker

# Secret Key (Generate with: rails secret)
SECRET_KEY_BASE=replace_with_lengthy_secure_hex

# Frontend URL (Change to your domain)
FRONTEND_URL=https://your-unichat-domain.com

# Database Configuration
POSTGRES_DB=unichat_production
POSTGRES_USER=unichat_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Email Configuration
MAILER_SENDER_EMAIL=UniChat <unichat@digitalgrowth.global>
SMTP_DOMAIN=digitalgrowth.global
SMTP_ADDRESS=c105494.sgvps.net
SMTP_PORT=465
SMTP_USERNAME=unichat@digitalgrowth.global
SMTP_PASSWORD=9wD3i+c3$1^#
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=false
SMTP_SSL=true
MAILER_INBOUND_EMAIL_DOMAIN=digitalgrowth.global
RAILS_INBOUND_EMAIL_SERVICE=relay

# Installation Branding
INSTALLATION_NAME=UniChat
BRAND_NAME=UniChat

# Account Settings
ENABLE_ACCOUNT_SIGNUP=false

# Storage Settings (Optional)
# S3_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=your-region

# Additional Settings
FORCE_SSL=true
